<h1>Listing bar_menu_items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bar_menu_items.each do |bar_menu_item| %>
      <tr>
        <td><%= bar_menu_item.name %></td>
        <td><%= bar_menu_item.price %></td>
        <td><%= link_to 'Show', bar_menu_item %></td>
        <td><%= link_to 'Edit', edit_bar_menu_item_path(bar_menu_item) %></td>
        <td><%= link_to 'Destroy', bar_menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

